<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.panel">
            <block class="Magento\Cms\Block\Block" name="header.top.cms">
                <arguments>
                    <argument name="block_id" xsi:type="string">header-top</argument>
                </arguments>
            </block>

            <referenceBlock name="header.links" remove="true" />
        </referenceContainer>

        <referenceContainer name="header-wrapper">
            <block class="Magento\Cms\Block\Block" name="header.nav.left" before="logo">
                <arguments>
                    <argument name="block_id" xsi:type="string">header-nav-left</argument>
                </arguments>
            </block>

            <referenceBlock name="top.search" remove="true" />
            <referenceBlock name="minicart" remove="true" />

            <block class="Magento\Cms\Block\Block" name="header.nav.right" after="logo">
                <arguments>
                    <argument name="block_id" xsi:type="string">header-nav-right</argument>
                </arguments>
            </block>
        </referenceContainer>


    </body>
</page>



                                    
                                
                                        
             
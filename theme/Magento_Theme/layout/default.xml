<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceContainer name="header.panel">
            <block class="Magento\Cms\Block\Block" name="header.top.cms">
                <arguments>
                    <argument name="block_id" xsi:type="string">header-top</argument>
                </arguments>
            </block>

            <referenceBlock name="header.links" remove="true" />
        </referenceContainer>


        <referenceContainer name="header-wrapper">

            <!-- LEFT -->
            <container name="nav-section-left"
                htmlTag="div"
                htmlClass="nav-section-left"
                before="logo" />

            <!-- RIGHT -->
            <container name="nav-section-right"
                htmlTag="div"
                htmlClass="nav-section-right"
                after="logo" />

            <!-- REMOVE DEFAULT -->
            <referenceBlock name="top.search" remove="true" />
            <referenceBlock name="minicart" remove="true" />
            <referenceBlock name="store.menu" remove="true" />
            <referenceBlock name="catalog.compare.link" remove="true" />

        </referenceContainer>


        <!-- HEADER LEFT -->
        <referenceContainer name="nav-section-left">

            <block class="Magento\Cms\Block\Block" name="header.left.cms">
                <arguments>
                    <argument name="block_id" xsi:type="string">header-left</argument>
                </arguments>
            </block>

            <block class="Magento\Theme\Block\Html\Topmenu"
                name="store.menu.custom"
                template="Magento_Theme::html/topmenu.phtml" />

        </referenceContainer>


        <!-- HEADER RIGHT -->
        <referenceContainer name="nav-section-right">

            <block class="Magento\Cms\Block\Block" name="header.right.top">
                <arguments>
                    <argument name="block_id" xsi:type="string">header-right-top</argument>
                </arguments>
            </block>

            <block class="Magento\Cms\Block\Block" name="header.right.nav">
                <arguments>
                    <argument name="block_id" xsi:type="string">header-right-nav</argument>
                </arguments>
            </block>

        </referenceContainer>

        <referenceBlock name="copyright" remove="true" />
        <referenceBlock name="footer_links" remove="true" />
        <referenceBlock name="form.subscribe" remove="true" />

        <referenceContainer name="footer">
            <referenceContainer name="footer.container" remove="true" />
        </referenceContainer>


        <!-- MAIN FOOTER WRAPPER -->
        <referenceContainer name="footer">

            <container name="footer.main"
                htmlTag="div"
                htmlClass="main_container"
                before="-" />

        </referenceContainer>


        <!-- INNER SECTIONS -->
        <referenceContainer name="footer.main">

            <container name="footer.email"
                htmlTag="div"
                htmlClass="email_row"
                before="-" />

            <container name="footer.columns"
                htmlTag="div"
                htmlClass="footer_row" />

            <container name="footer.social"
                htmlTag="div"
                htmlClass="footer_social" />

        </referenceContainer>


        <!-- BOTTOM APP OUTSIDE MAIN CONTAINER -->
        <referenceContainer name="footer">

            <container name="footer.app"
                htmlTag="div"
                htmlClass="footer_bottom_block"
                after="footer.main" />

        </referenceContainer>

        <referenceContainer name="footer.email">

            <block class="Magento\Newsletter\Block\Subscribe"
                name="footer.newsletter"
                template="Magento_Newsletter::subscribe.phtml" />

        </referenceContainer>


        <!-- 4 COLUMNS -->
        <referenceContainer name="footer.columns">

            <!-- 1 - Categories -->
            <block class="Magento\Theme\Block\Html\Topmenu"
                name="footer.categories"
                template="Magento_Theme::html/footer-categories.phtml" />

            <!-- 2 - Company -->
            <block class="Magento\Cms\Block\Block" name="footer.company">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-company</argument>
                </arguments>
            </block>

            <!-- 3 - Services -->
            <block class="Magento\Cms\Block\Block" name="footer.services">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-services</argument>
                </arguments>
            </block>

            <!-- 4 - Quick -->
            <block class="Magento\Cms\Block\Block" name="footer.quick">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-quick</argument>
                </arguments>
            </block>

        </referenceContainer>


        <!-- SOCIAL -->
        <referenceContainer name="footer.social">

            <block class="Magento\Cms\Block\Block" name="footer.social.cms">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-social</argument>
                </arguments>
            </block>

        </referenceContainer>


        <!-- APP SECTION -->
        <referenceContainer name="footer.app">

            <block class="Magento\Cms\Block\Block" name="footer.app.cms">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-app</argument>
                </arguments>
            </block>

        </referenceContainer>


    </body>
</page>
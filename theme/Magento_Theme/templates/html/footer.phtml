<?php
/** @var \Magento\Framework\View\Element\Template $block */
$layout = $block->getLayout();

/**
 * Helper to render CMS block safely
 */
$renderCmsBlock = function ($identifier) use ($layout) {
    $html = $layout->createBlock(\Magento\Cms\Block\Block::class)
        ->setBlockId($identifier)
        ->toHtml();

    return trim($html) ? $html : '';
};
?>


<!-- Newsletter / Email Row -->
<div class="main_container">

    <?= $block->getChildHtml('footer.newsletter'); ?>

    <!-- Footer Links -->
    <div class="footer_row">
        <?= $renderCmsBlock('footer-categories'); ?>
        <?= $renderCmsBlock('footer-company'); ?>
        <?= $renderCmsBlock('footer-services'); ?>
        <?= $renderCmsBlock('footer-quick-links'); ?>

    </div>

    <?= $renderCmsBlock('footer-social'); ?>
    <?= $renderCmsBlock('footer-bottom-block'); ?>
</div>
